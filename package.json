{
  "name": "ai-chat",
  "displayName": "AI Chat",
  "version": "0.0.2",
  "description": "An AI chat interface inside VS Code",
  "engines": {
    "vscode": "^1.93.0"
  },
  "activationEvents": [
    "onView:aiChat.chatPanel",
    "onCommand:aiChat.explainCode",
    "onCommand:aiChat.fixCode",
    "onCommand:aiChat.writeDocstrings",
    "onCommand:aiChat.generateTests",
    "onCommand:aiChat.exploreCodebase"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "aiChat",
          "title": "AI Chat",
          "icon": "resources/chat-icon.svg"
        }
      ]
    },
    "views": {
      "aiChat": [
        {
          "id": "aiChat.chatPanel",
          "name": "AI Chat Panel",
          "type": "webview"
        }
      ]
    },
    "commands": [
      {
        "command": "aiChat.explainCode",
        "title": "Explain Code"
      },
      {
        "command": "aiChat.fixCode",
        "title": "Fix Code"
      },
      {
        "command": "aiChat.writeDocstrings",
        "title": "Write Docstrings for Code"
      },
      {
        "command": "aiChat.generateTests",
        "title": "Generate Tests for Code"
      },
      {
        "command": "aiChat.exploreCodebase",
        "title": "Explore Codebase"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/node": "20.x",
    "@types/vscode": "^1.93.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "ts-loader": "^9.5.1",
    "typescript": "^5.5.4",
    "webpack": "^5.94.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "groq-sdk": "^0.7.0"
  }
}
